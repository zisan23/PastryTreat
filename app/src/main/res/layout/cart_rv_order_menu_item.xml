<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_cv"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pale_green_gradient">


                <ImageView
                    android:id="@+id/cart_rv_menu_item_img"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/cheesecake"
                    app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/cart_rv_menu_foodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Food Name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cart_rv_menu_item_img" />


                <TextView
                    android:id="@+id/cart_rv_menu_Restaurent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="Restaurent Name"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cart_rv_menu_item_img"
                    android:layout_below="@+id/cart_rv_menu_foodName"
                    />


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="15dp"
                    android:id="@+id/cart_rv_menu_orderID"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Order ID"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cart_rv_menu_item_img"
                    android:layout_below="@+id/cart_rv_menu_Restaurent"

                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/Teal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/cart_rv_menu_orderID"
                    android:layout_marginTop="4dp"
                    >

                    <TextView
                        android:id="@+id/cart_rv_menu_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="10000"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payment"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/Orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cart_rv_menu_item_img"
                    android:layout_below="@+id/cart_rv_menu_orderID"
                    />

                <TextView
                    android:id="@+id/cart_rv_menu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="$100000000"
                    android:textColor="@color/Orange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cart_rv_menu_item_img"
                    android:layout_below="@+id/payment"

                    />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>