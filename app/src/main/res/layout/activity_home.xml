                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="More"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/OFF_WHITE"/>

            </LinearLayout>

