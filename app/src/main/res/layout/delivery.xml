<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are you up to"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F2F2F2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:hint="Search for restaurants"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_margin="16dp"/>

    <!-- Restaurants Text -->
    <TextView
        android:id="@+id/restaurantsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:text="Restaurants"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"/>

    <!-- Send My Delivery Button -->
    <Button
        android:id="@+id/sendDeliveryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurantsText"
        android:text="Send My Delivery"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
