<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/homenav_cv_child_item"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFF5E0"> <!-- Use a more vibrant background color -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homenav_iv_child_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cheesecake" />

            <TextView
                android:id="@+id/homenav_tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp" />

            <TextView
                android:id="@+id/homenav_tv_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product description goes here. Provide details about the delicious dessert."
                android:textSize="14sp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/homenav_tv_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$10.99"
                android:textColor="@color/ELECTRIC_RED"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
