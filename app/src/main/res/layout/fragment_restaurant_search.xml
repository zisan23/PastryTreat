<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.RestaurantSearchFragment"
    android:background="@color/OFF_WHITE">


        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_rest_search_cv_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:cardCornerRadius="15dp">

            <EditText
                android:id="@+id/fragment_rest_search_et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search Restaurent..."
                android:paddingHorizontal="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:drawableRight="@drawable/round_search_24"/>



        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/fragment_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_rest_search_cv_search"
            android:text="Search"
            android:backgroundTint="@color/Theme_Green"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_rest_search_rv_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_search_btn"
            android:layout_marginTop="50dp">

        </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>